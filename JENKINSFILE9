pipeline {
    agent {
        label 'ubuntuNode1'
    }
    stages {
        stage('pre -build') {
            echo "pre-build"
        }
        stage('build and Deploy') {
            agent {
                docker{
                    dir './ci'
                    label 'kamal'
                    dockerfile true
                }
            }
            steps {
                script {
                    ifconfig
                }
            }
        }
        stage('Unit tests') {
            steps {
                sh 'echo Running unit tests'
            }
        }
        stage('Regression tests') {
            steps {
                parallel(
                    chrome : {
                        sh 'echo Running E2E tests on chrome'
                    },
                    firefox : {
                        sh 'echo Running E2E tests on chrome'
                    },
                    safari : {
                        sh 'echo Running E2E tests on chrome'
                    }
                )
                
            }
        }
        stage('Release to prod') {
            steps {
                sh 'echo Releasing to prod'
            }
        }
    }
 post {
        always {
            echo 'Cleanup after everything!'
        }
    }
}